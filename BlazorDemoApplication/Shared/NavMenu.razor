@using MudBlazor
<MudPaper Color="Color.Dark">
    <MudNavMenu Expanded="@(!collapseNavMenu)" Color="Color.Info" Elevation="2">
        <MudContainer Fluid="true">
            <MudText Typo="Typo.h6">
                <MudNavLink Href="">BlazorApp</MudNavLink>
            </MudText>
            <MudNavGroup Icon="@Icons.Material.Filled.Menu" OnClick="ToggleNavMenu">



                <MudNavLink Href="" Match="NavLinkMatch.All">
                    <MudIcon Icon="@Icons.Material.Filled.Home" /> Home
                </MudNavLink>
                <MudNavLink Href="counter" Icon="@Icons.Material.Filled.Add">
                    Counter
                </MudNavLink>
                <MudNavLink Href="fetchdata" Icon="@Icons.Material.Filled.List">
                    Fetch data
                </MudNavLink>
                <MudNavLink Href="/Users" Icon="@Icons.Material.Filled.People">
                    User Details
                </MudNavLink>
            </MudNavGroup>
        </MudContainer>
    </MudNavMenu>
</MudPaper>
<style>
 
.mud-container-maxwidth-lg {
    max-width: 1280px;
    background-image: linear-gradient(180deg, rgb(5, 39, 103) 0%, #3a0647 70%);
}
      
   .mud-navmenu {
        color: white;
    }
}

</style>
@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}